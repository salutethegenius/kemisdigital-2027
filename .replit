modules = ["nodejs-20", "web"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "cd client && npm run preview"]

[packager]
language = "nodejs"
  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = false

[languages]
  [languages.javascript]
  pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
    [languages.javascript.languageServer]
    start = "typescript-language-server --stdio"

[workflows]
runButton = "Frontend Only"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Client"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Dev Stack"
author = 36910130
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && VITE_APP_API_URL=http://localhost:3000 npx vite --host 0.0.0.0 --port 5001"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx watch server/index.ts"

[[workflows.workflow]]
name = "Development Server"
author = 36910130
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx server/index.ts"

[[workflows.workflow]]
name = "Full Stack Development"
author = 36910130
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx watch server/index.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && VITE_APP_API_URL=http://localhost:3000 npx vite --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Client"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && VITE_APP_API_URL=http://localhost:5000 npx vite --host 0.0.0.0 --port 3000"
waitForPort = 3000

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx server/index.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "Development"
author = 36910130
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx watch server/index.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && VITE_API_URL=http://localhost:5000 npx vite --host 0.0.0.0 --port 3000"

[[workflows.workflow]]
name = "Frontend Only"
author = 36910130
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm run dev -- --port 3000"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
